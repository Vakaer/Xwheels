@model Xwheels.tbl_Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



@using (Html.BeginForm("Edit", "Vehicle", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div>
            <h4 class="bg-gradient-olive p-2" style="border-radius:8px 8px 0px 0px;">Edit Category</h4>

        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Category_id)



        <div class="border">


            <div class="form-group">
                @Html.Label("Category Name:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Category_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Category_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" /> | 
                @Html.ActionLink("Back", "List", "Vehicle", new { @class = "btn btn-danger" })
                <br /><br />
            </div>
        </div>



    </div>
}


